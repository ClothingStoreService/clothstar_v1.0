<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.store.clothstar.member.repository.MemberRepository">
    <insert id="save" parameterType="org.store.clothstar.member.dto.MemberDTO">
        insert into member(email, password)
        values(#{email}, #{password})
    </insert>

    <select id="findById" resultType="org.store.clothstar.member.dto.MemberDTO">
        select * from member where id = #{id}
    </select>

    <select id="findByEmail" resultType="org.store.clothstar.member.dto.MemberDTO">
        select * from member where email = #{email}
    </select>
</mapper>