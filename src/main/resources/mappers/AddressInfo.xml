<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.store.clothstar.member.repository.AddressInfoRepository">
    <resultMap type="org.store.clothstar.member.domain.AddressInfo" id="addressInfo">
        <result property="memberId" column="member_id"/>
        <result property="receiverNm" column="receiver_nm"/>
        <result property="zipNo" column="zip_no"/>
        <result property="telNo" column="tel_no"/>
        <result property="deliveryReq" column="delivery_req"/>
        <result property="defaultFg" column="default_fg"/>
    </resultMap>

    <select id="findAllMemberAddress" resultType="org.store.clothstar.member.domain.AddressInfo">
        select * from address_info where member_id = #{memberId};
    </select>

    <insert id="save" parameterType="org.store.clothstar.member.domain.AddressInfo">
        insert into address_info(member_id, receiver_nm, zip_no, address1, address2, tel_no, delivery_req, default_fg)
        values (#{memberId}, #{receiverNm}, #{zipNo}, #{address1}, #{address2}, #{telNo}, #{deliveryReq}, #{defaultFg});
    </insert>
</mapper>